{
  "name": "koa-ts-starter",
  "version": "1.0.0",
  "description": "TypeScript Koa API server with workers, templates, and background jobs",
  "author": "Nicholas Nguyen <NicholasNguyen8742@gmail.com> (https://github.com/Nicholas-Nguyen8742)",
  "license": "MIT",
  "main": "dist/server.js",
  "homepage": "https://github.com/Nicholas-Nguyen8742/leafy-maps#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nicholas-Nguyen8742/leafy-maps"
  },
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "bullmq": "4.18.3",
    "dotenv": "16.3.1",
    "handlebars": "4.7.8",
    "ioredis": "5.3.2",
    "koa": "2.15.0",
    "koa-bodyparser": "4.4.1",
    "koa-compress": "5.1.0",
    "koa-router": "12.0.1",
    "koa-static": "5.0.0",
    "nodemailer": "6.9.7",
    "puppeteer": "21.5.2",
    "reflect-metadata": "0.1.14",
    "typeorm": "0.3.17",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "@types/handlebars": "4.1.0",
    "@types/jest": "29.5.5",
    "@types/koa": "2.15.0",
    "@types/koa-bodyparser": "4.3.11",
    "@types/koa-compress": "4.0.4",
    "@types/koa-router": "7.4.4",
    "@types/node": "20.5.0",
    "@types/nodemailer": "6.4.13",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "29.7.0",
    "nodemon": "3.0.1",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": "20.9.0"
  },
  "keywords": [
    "koa",
    "typescript",
    "api",
    "workers",
    "templates",
    "pdf",
    "email"
  ]
}
